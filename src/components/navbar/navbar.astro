---
import Container from "@/components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  // Remove or comment out old items
  // { title: "Features", path: "#", children: [...] },
  // { title: "Pricing", path: "/pricing" },
  // { title: "About", path: "/about" },
  // { title: "Blog", path: "/blog" },
  // { title: "Contact", path: "/contact" },
  // { title: "Pro Version", badge: true, path: "..." },

  // Add links for your sections
  { title: "Safety", path: "#safety" }, // Assuming id="safety"
  { title: "Importance", path: "#importance" }, // Assuming id="importance"
  { title: "Clarity", path: "#clarity" }, // Assuming id="clarity"
  { title: "Comfort", path: "#comfort" }, // Assuming id="comfort"
  { title: "Practicality", path: "#practicality" }, // Assuming id="practicality"
  { title: "Science", path: "#science" }, // Assuming id="science"
  { title: "Gallery", path: "#gallery" }, // Assuming id="gallery"
  { title: "About", path: "#about" }, // Assuming id="about"
  // Add other links as needed (e.g., external links, contact)
];
---

<Container class="sticky top-0 z-50 bg-white">
  <header class="flex flex-col lg:flex-row justify-start items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
          <img
            src="/images/logo.png"
            alt="CleanAirHats Logo"
            class="h-16 w-auto"
          />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <!-- Add specific left margin for large screens -->
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 lg:ml-8">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <li>
                <a
                  href={item.path}
                  class="flex lg:px-3 py-2 items-center text-black hover:text-black">
                  <span> {item.title}</span>
                </a>
              </li>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
