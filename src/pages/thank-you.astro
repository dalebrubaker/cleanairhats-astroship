--- 
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - Clean Air Hats">
    <main class="container mx-auto p-8 text-center">
        <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-green-500 mx-auto mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            
            <h1 class="text-4xl font-bold text-blue-600 mb-4">Thank You!</h1>
            
            <p class="text-xl mb-6">
                Your message has been received. We appreciate you reaching out to Clean Air Hats.
            </p>
            
            <p class="text-lg mb-8">
                We'll get back to you as soon as possible.
            </p>
            
            <a href="/" class="bg-blue-500 text-white py-3 px-6 rounded hover:bg-blue-600 transition inline-block">
                Return to Home Page
            </a>
        </div>
    </main>
</Layout>
